
<% if current_user_session %>
    <h2>Welcome <%= current_user.name %></h2>
<% else %>
    <%= form_for @user_session do |f| %>
        <% if @user_session.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
              <ul>
                <% @user_session.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.label :email %><br />
        <%= f.text_field :email %><br />
        <br />
        <%= f.label :password %><br />
        <%= f.password_field :password %><br />
        <br />
        <%= f.submit "Login" %>
    <% end %>
    <p>Or use your smartphone to scan this code</p>
    <div id="qrcode">
        <div id="code"></div>
        <p data-bind="text: url()"></p>
        <p data-bind="text: 'auth challenge: ' + challenge()"></p>
        <button data-bind="click: regenerate"> refresh challenge</button>
    </div>
<% end %>



